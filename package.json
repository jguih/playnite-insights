{
  "name": "playnite-insights-project",
  "version": "1.0.0-beta.1",
  "private": true,
  "workspaces": [
    "playnite-insights",
    "playwright",
    "packages/@playnite-insights/lib",
    "packages/@playnite-insights/infra",
    "packages/@playnite-insights/core",
    "packages/@playnite-insights/testing",
    "packages/@playatlas/auth",
    "packages/@playatlas/game-library",
    "packages/@playatlas/game-note",
    "packages/@playatlas/game-session",
    "packages/@playatlas/common",
    "packages/@playatlas/system",
    "packages/integration-testing"
  ],
  "scripts": {
    "dev": "pnpm --filter playnite-insights run dev",
    "prod": "docker compose up -d --build --force-recreate app-prod",
    "mkdocs": "docker compose up -d --build --force-recreate app-docs",
    "build": "pnpm --filter playnite-insights run build",
    "preview": "pnpm --filter playnite-insights run preview",
    "test:unit": "pnpm -r run test:unit",
    "test:integration": "pnpm -r run test:integration",
    "test": "pnpm test:unit && pnpm test:integration",
    "release-beta": "standard-version --prerelease beta",
    "release": "standard-version",
    "prepare": "husky"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "standard-version": "^9.5.0"
  },
  "files": [
    "build",
    "package.json"
  ],
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}