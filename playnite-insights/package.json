{
  "name": "playnite-insights",
  "private": true,
  "version": "2.2.0",
  "type": "module",
  "scripts": {
    "dev": "vite dev --host",
    "build": "vite build",
    "preview": "vite preview --host --port 3000",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "format": "prettier --write .",
    "lint": "prettier --check . && eslint .",
    "preversion": "npm run test",
    "test": "npm run test:unit",
    "test:watch": "vitest run -w",
    "test:unit": "vitest run"
  },
  "devDependencies": {
    "@eslint/compat": "^1.2.5",
    "@eslint/js": "^9.18.0",
    "@faker-js/faker": "^9.9.0",
    "@playnite-insights/testing": "workspace:*",
    "@sveltejs/adapter-node": "^5.2.12",
    "@sveltejs/kit": "^2.16.0",
    "@sveltejs/vite-plugin-svelte": "^5.0.0",
    "@tailwindcss/typography": "^0.5.15",
    "@tailwindcss/vite": "^4.0.0",
    "@types/node": "^24.0.14",
    "@vitest/browser": "^3.2.3",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-svelte": "^3.0.0",
    "fake-indexeddb": "^6.2.2",
    "globals": "^16.0.0",
    "prettier": "^3.4.2",
    "prettier-plugin-svelte": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.20.0",
    "vite": "^6.2.6",
    "vitest": "^3.2.3",
    "vitest-browser-svelte": "^0.1.0"
  },
  "dependencies": {
    "@inlang/paraglide-js": "^2.0.0",
    "@lucide/svelte": "^0.525.0",
    "@playnite-insights/core": "workspace:*",
    "@playnite-insights/infra": "workspace:*",
    "@playnite-insights/lib": "workspace:*",
    "@playatlas/bootstrap": "workspace:*",
    "@playatlas/game-library": "workspace:*",
    "echarts": "^5.6.0",
    "sharp": "^0.34.3",
    "zod": "^3.25.74"
  },
  "engines": {
    "node": "^24.3.0",
    "pnpm": "^10.13.0"
  },
  "files": [
    "build",
    "package.json"
  ]
}